        "drupal/slick_views": "^1.0@RC",
        "drupal/spacelift": "2.x-dev",
        "drupal/svg_image": "^1.8",
        "drupal/swiftmailer": "^1.0@beta",
        "drupal/swiftmailer_force_html": "^1.0@beta",
        "drupal/token": "^1.5",
        "drupal/twig_field_value": "^1.1",
        "drupal/video_embed_field": "^2.0",
        "drupal/viewfield": "3.x-dev",
        "drupal/views_block_filter_block": "^1.0@beta",
        "drupal/views_linkarea": "^1.0@beta",
        "drupal/views_menu_children_filter": "^1.0@beta",
        "drupal/views_pager_summary": "^1.0@beta",
        "drupal/visitor_tracking_inbound_code": "dev-8.x-1.x",
        "drush-ops/behat-drush-endpoint": "^0.0.5",
        "drush/config-extra": "^1.0",
        "npm-asset/dropzone": "^5.5",
        "npm-asset/imagesloaded": "^4.1",
        "npm-asset/jquery-match-height": "^0.7.2",
        "oomphinc/composer-installers-extender": "^1.1",
        "pantheon-systems/quicksilver-pushback": "~1",
        "rvtraveller/qs-composer-installer": "^1.1",
        "topfloor/composer-cleanup-vcs-dirs": "^1.0",
        "webflo/drupal-core-strict": "^8",
        "ext-json": "*"
    },
    "require-dev": {
        "mikey179/vfsstream": "^1.2",
        "behat/behat": "3.*",
        "behat/mink": "^1.7",
        "behat/mink-extension": "^2.2",
        "behat/mink-goutte-driver": "^1.2",
        "jcalderonzumba/gastonjs": "^1.0.2",
        "jcalderonzumba/mink-phantomjs-driver": "^0.3.1",
        "drupal/drupal-extension": "^3.1",
        "phpunit/phpunit": "^4.8",
        "symfony/css-selector": "^2.8",
        "consolidation/robo": "^1.0"
    },
    "conflict": {
            "drupal/drupal": "*"
    },
    "minimum-stability": "alpha",
    "prefer-stable": true,
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "build-assets": [
            "@prepare-for-pantheon",
            "composer install --optimize-autoloader --no-dev"
        ],
        "lint": "find web/modules/custom web/themes/custom -name '*.php' -exec php -l {} \\;",
        "code-sniff": "echo 'No code sniff step defined.'",
        "unit-test": "echo 'No unit test step defined.'",
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "prepare-for-pantheon": "DrupalProject\\composer\\ScriptHandler::prepareForPantheon",
        "post-install-cmd": [
            "@drupal-scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "find .circleci/scripts/pantheon/ -type f | xargs chmod 755",
            "find tests/scripts/ -type f | xargs chmod 755"
        ],
        "post-create-project-cmd": [
            "@drupal-scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "installer-types": ["library", "drupal-library", "bower-asset", "npm-asset"],
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"],
            "web/private/scripts/quicksilver/{$name}": ["type:quicksilver-script"],
            "web/modules/custom/{$name}": ["type:drupal-custom-module"],
            "web/themes/custom/{$name}": ["type:drupal-custom-theme"],
            "web/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset",
                "vendor:bower-asset",
                "vendor:npm-asset"
            ]
        },
        "drupal-library-mapping-type": "symlink",
        "drupal-library-mapping": {
            "slick-carousel": "slick"
        },
        "build-env": {
            "install-cms": [
                "drush site-install standard --account-mail={account-mail} --account-name={account-name} --account-pass={account-pass} --site-mail={site-mail} --site-name={site-name} --yes",
                "drush pm-enable config_direct_save simple_block --yes",
                "drush pm-uninstall block_content --yes"
            ],
            "export-configuration": "drush config-export --yes"
        },
        "drupal-scaffold": {
            "source": "https://raw.githubusercontent.com/pantheon-systems/drops-8-scaffolding/{version}/{path}",
            "includes": [
                "sites/default/default.services.pantheon.preproduction.yml",
                "sites/default/settings.pantheon.php"
            ],
            "excludes": [
                ".csslintrc",
                ".editorconfig",
                ".eslintignore",
                ".eslintrc.json",
                ".htaccess",
                "web.config",
                "robots.txt"
            ]
        },
        "patches": {
            "bower-asset/swipebox": {
                "Fix selector": "https://patch-diff.githubusercontent.com/raw/brutaldesign/swipebox/pull/298.diff"
            },
            "drupal/chosen": {
                "#2957152: Chosen dropdown stays open and will not close": "https://www.drupal.org/files/issues/2018-03-29/chosen-2957152-allow_chosen_dropdown_to_close-3.patch"
            },
            "drupal/commerce": {
                "#2852363: Add default Views argument for current cart": "https://www.drupal.org/files/issues/commerce-Views_argument_default_current_cart-2852363-5.patch",
                "#2857157: Guest registration": "https://www.drupal.org/files/issues/2018-11-19/2857157-115.patch",
                "#2846895: Variation title generate event": "https://patch-diff.githubusercontent.com/raw/drupalcommerce/commerce/pull/707.diff",
                "#2831952: Entity print handler for orders": "https://www.drupal.org/files/issues/2018-10-30/commerce-order-2831952-66.patch"
            },
            "drupal/commerce_google_analytics": {
                "#2885848: Make billing profile optional": "https://www.drupal.org/files/issues/commerce_google_analytics-optional_billing_profile-2885848-2.patch"
            },
            "drupal/core": {
                "#2700667: Allow #states on markup fields": "https://www.drupal.org/files/issues/undefined_index_type_states-2700667-22.patch",
                "#2223967: Don't double-encode contact messages": "https://www.drupal.org/files/issues/2223967-46.patch",
                "#2866386: Views AJAX path issue": "https://www.drupal.org/files/issues/2018-03-14/drupal-views_path_ajax-2866386-10.patch"
            },
            "drupal/entity_reference_revisions": {
                "#2799479: Fix views relationships": "https://www.drupal.org/files/issues/2799479-34-views-rel-fix.patch"
            },
            "drupal/facets": {
                "#2984465: Hide empty facet blocks with JS": "https://www.drupal.org/files/issues/2018-08-06/2984465-reroll.patch"
            },
            "drupal/markup": {
                "#2711427: Support translation of markup content": "https://www.drupal.org/files/issues/allow_translation_of-2711427-4.patch"
            },
            "drupal/menu_block": {
                "#2756675: Fix parent active trail": "https://www.drupal.org/files/issues/2018-08-08/menu_block-follow-2756675-55.patch"
            },
            "drupal/noindex": {
                "#3002284: Expand and support configuration": "https://www.drupal.org/files/issues/2018-10-26/noindex-configuration_support-3002284-5.patch"
            },
            "drupal/responsive_tables_filter": {
                "Match Spacelift grid widths": "https://raw.githubusercontent.com/TopFloorTech/drupal-patches/master/responsive_tables_filter/responsive_tables_filter-Spacelift_grid_widths.patch"
            },
            "drupal/shs": {
                "#2838878: Support other entity types in Views exposed filter": "https://www.drupal.org/files/issues/shs-Support_custom_entities-2838878-4.patch"
            }
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "7.2"
        }
    }
}
